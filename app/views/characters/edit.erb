<h1>Create a new character!</h1>

<form action="/characters/<%= @character.id %>" method="POST">
  <input type="hidden" name="_method" value="PUT">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @character.name %>"><br>
  <label>Class:</label>
  <select name="character_class">
    <% @character_classes.each do |character_class| %>
      <option value="<%= character_class.id %>"
      <% if @character.character_classes.first == character_class %>
        selected="selected"
      <% end %>
      ><%= character_class.name %></option>
    <% end %>
  </select><br>
  <label>Weapon:</label>
  <select name="armor">
    <% @armors.each do |armor| %>
      <option value="<%= armor.id %>"
      <% if @character.armors.first == armor %>
        selected="selected"
      <% end %>
      ><%= armor.name %></option>
    <% end %>
  </select><br>
  <label>Weapon:</label>
  <select name="weapon">
    <% @weapons.each do |weapon| %>
      <option value="<%= weapon.id %>"
      <% if @character.weapons.first == weapon %>
        selected="selected"
      <% end %>
      ><%= weapon.name %></option>
    <% end %>
  </select><br>
  <input type="submit" name="submit" value="Set new choices">
</form>
