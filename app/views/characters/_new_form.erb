<form id="new-character-form" action="/characters" method="POST">
  <label>Name:</label>
  <input type="text" name="name"><br>
  <label>Class:</label>
  <select class="button" name="character_class">
    <% @character_classes.each do |character_class| %>
      <option value="<%= character_class.id %>"><%= character_class.name %></option>
    <% end %>
  </select> <a class="classes-link" href="/character_classes">View all classes</a>
  <br>
  <label>Armor:</label>
  <select class="button" name="armor">
    <% @armors.each do |armor| %>
      <option value="<%= armor.id %>"><%= armor.name %></option>
    <% end %>
  </select> <a class="armors-link" href="/armors">View all armors</a>
  <br>
  <label>Weapon:</label>
  <select class="button" name="weapon">
    <% @weapons.each do |weapon| %>
      <option value="<%= weapon.id %>"><%= weapon.name %></option>
    <% end %>
  </select>
  <a class="weapons-link" href="/weapons">View all weapons</a>
  <br>
  <input class="button" type="submit" name="submit" value="Create this character">
</form>
