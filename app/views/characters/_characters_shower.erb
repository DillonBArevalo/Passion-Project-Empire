<% @characters.each do |character| %>
  <div class="character-card">
    <p><a href="/characters/<%= character.id %>"><%= character.name %></a>
    <br>
    Classes:
    <% character.character_classes.each do |character_class| %>
      <%= character_class.name %>
    <% end %>
    <br>
    Weapons:
    <% character.weapons.each do |weapon| %>
      <%= weapon.name %>
    <% end %>
    <br>
    Armor:
    <% character.armors.each do |armor| %>
      <%= armor.name %>
    <% end %>

    </p>
<% end %>
